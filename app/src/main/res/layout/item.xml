<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@id/layoutClick"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@id/txtDisc"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dip"
            android:text="@string/loremipsum"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imvIcon" />

        <TextView
            android:id="@id/txtmeter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:text="TextView"
            app:layout_constraintEnd_toStartOf="@id/menu_item"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/imvIcon"
            app:layout_constraintTop_toBottomOf="@id/txtPrice" />

        <TextView
            android:id="@id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24.0dip"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@id/imvIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@id/imvIcon"
            android:layout_width="128.0dip"
            android:layout_height="87.0dip"
            android:layout_marginTop="12.0dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/a" />

        <ImageView
            android:id="@id/menu_item"
            android:layout_width="wrap_content"
            android:layout_height="30.0dip"
            android:layout_marginTop="16.0dip"
            android:layout_marginBottom="8.0dip"
            app:layout_constraintBottom_toTopOf="@id/txtDisc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/txtmeter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@mipmap/menu" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>