<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/image_8"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none"
            android:scrollingCache="true">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.AppBarLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:elevation="0.0dip" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingTop="25.0dip"
                    android:paddingRight="@dimen/spacing_large">

                    <android.support.v7.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="6.0dip"
                        app:cardElevation="2.0dip"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@id/LayAdd"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <android.support.constraint.ConstraintLayout
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/spacing_xmlarge"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageButton
                                    android:layout_width="@dimen/spacing_xmlarge"
                                    android:layout_height="@dimen/spacing_xmlarge"
                                    android:layout_marginLeft="8.0dip"
                                    android:layout_marginRight="8.0dip"
                                    android:background="?selectableItemBackgroundBorderless"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/aadd"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />
                            </android.support.constraint.ConstraintLayout>

                            <View
                                android:layout_width="0.0dip"
                                android:layout_height="@dimen/spacing_middle" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="فایل جدید"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
                                android:textColor="@color/grey_40"
                                app:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@id/TotalFile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3734.89 "
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/grey_40" />

                            <View
                                android:layout_width="0.0dip"
                                android:layout_height="@dimen/spacing_mxlarge" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/spacing_small" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            app:cardCornerRadius="6.0dip"
                            app:cardElevation="2.0dip"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:id="@id/LayAllFiles"
                                android:layout_width="fill_parent"
                                android:layout_height="85.0dip"
                                android:clickable="true"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/spacing_large">

                                <ImageView
                                    android:layout_width="45.0dip"
                                    android:layout_height="45.0dip"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/aicon_folder_full_icon" />

                                <View
                                    android:layout_width="@dimen/spacing_mlarge"
                                    android:layout_height="0.0dip" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" تمام فایل ها"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                    android:textColor="@color/green_900"
                                    app:fontFamily="sans-serif-medium" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <View
                            android:layout_width="@dimen/spacing_small"
                            android:layout_height="0.0dip" />

                        <android.support.v7.widget.CardView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            app:cardCornerRadius="6.0dip"
                            app:cardElevation="2.0dip"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:id="@id/LaySearch"
                                android:layout_width="fill_parent"
                                android:layout_height="85.0dip"
                                android:clickable="true"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/spacing_large">

                                <ImageView
                                    android:layout_width="@dimen/spacing_xxmlarge"
                                    android:layout_height="@dimen/spacing_xxmlarge"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/asearch" />

                                <View
                                    android:layout_width="@dimen/spacing_mlarge"
                                    android:layout_height="0.0dip" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="جستجوی فایل"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                    android:textColor="@color/green_900"
                                    app:fontFamily="sans-serif-medium" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:gravity="center"
                        android:text=""
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                        android:textColor="@color/grey_5"
                        app:fontFamily="sans-serif-medium" />

                    <android.support.v7.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="6.0dip"
                        app:cardElevation="2.0dip"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@id/LaySell"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_large">

                            <ImageView
                                android:layout_width="@dimen/spacing_xxmlarge"
                                android:layout_height="@dimen/spacing_xxmlarge"
                                android:layout_centerInParent="true"
                                android:src="@drawable/asell" />

                            <View
                                android:layout_width="@dimen/spacing_middle"
                                android:layout_height="0.0dip" />

                            <LinearLayout
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="فروش"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                                    android:textColor="@color/green_900" />

                                <TextView
                                    android:id="@id/countFileFroshi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10 jan 2018 11:20"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                    android:textColor="@color/grey_40" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@id/MaxPriceFroshiTxtVeiw"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1.639 ETH"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:textColor="@color/green_500" />

                                <TextView
                                    android:id="@id/MinPriceFroshiTxtVeiw"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4.38 USD"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                    android:textColor="@color/grey_40" />
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="6.0dip"
                        app:cardElevation="2.0dip"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@id/LayRent"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_large">

                            <ImageView
                                android:layout_width="@dimen/spacing_xxmlarge"
                                android:layout_height="@dimen/spacing_xxmlarge"
                                android:layout_centerInParent="true"
                                android:src="@drawable/aejare" />

                            <View
                                android:layout_width="@dimen/spacing_middle"
                                android:layout_height="0.0dip" />

                            <LinearLayout
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="اجاره"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                                    android:textColor="@color/green_900" />

                                <TextView
                                    android:id="@id/countFileEjare"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10 jan 2018 08:55"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                    android:textColor="@color/grey_40" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@id/MaxPriceEjareTxtVeiw"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1.947 ETH"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:textColor="@color/green_500" />

                                <TextView
                                    android:id="@id/MinPriceEjareTxtVeiw"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5.204 USD"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                    android:textColor="@color/grey_40" />
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="6.0dip"
                        app:cardElevation="2.0dip"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@id/LayPish"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_large">

                            <ImageView
                                android:layout_width="@dimen/spacing_xxmlarge"
                                android:layout_height="@dimen/spacing_xxmlarge"
                                android:layout_centerInParent="true"
                                android:src="@drawable/apish" />

                            <View
                                android:layout_width="@dimen/spacing_middle"
                                android:layout_height="0.0dip" />

                            <LinearLayout
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="پیش فروش"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                                    android:textColor="@color/green_900" />

                                <TextView
                                    android:id="@id/countFilePishfrosh"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10 jan 2018 07:38"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                    android:textColor="@color/grey_40" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@id/MaxPricePishTxtVeiw"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2.165 ETH"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:textColor="@color/green_500" />

                                <TextView
                                    android:id="@id/MinPricePishTxtVeiw"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="8.42 USD"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                    android:textColor="@color/grey_40" />
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="6.0dip"
                        app:cardElevation="2.0dip"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@id/LayHint"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_large">

                            <ImageView
                                android:layout_width="@dimen/spacing_xlarge"
                                android:layout_height="@dimen/spacing_xlarge"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ahint" />

                            <View
                                android:layout_width="@dimen/spacing_middle"
                                android:layout_height="0.0dip" />

                            <LinearLayout
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="راهنما"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                                    android:textColor="@color/green_900" />
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="6.0dip"
                        app:cardElevation="2.0dip"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@id/LayTermOfService"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_large">

                            <RelativeLayout
                                android:layout_width="20.0dip"
                                android:layout_height="20.0dip"
                                android:layout_marginTop="1.0dip">

                                <ImageView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_centerInParent="true"
                                    android:tint="@color/grey_10"
                                    app:srcCompat="@drawable/shape_circle" />

                                <ImageView
                                    android:layout_width="15.0dip"
                                    android:layout_height="15.0dip"
                                    android:layout_centerInParent="true"
                                    android:rotation="180.0"
                                    android:src="@drawable/ic_arrow_downward"
                                    android:tint="@color/grey_40" />
                            </RelativeLayout>

                            <View
                                android:layout_width="@dimen/spacing_middle"
                                android:layout_height="0.0dip" />

                            <LinearLayout
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TermOfService"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                                    android:textColor="@color/green_900" />
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <View
                    android:layout_width="@dimen/spacing_middle"
                    android:layout_height="@dimen/spacing_mlarge" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="4.0dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_gradient_very_soft" />
    </RelativeLayout>
</LinearLayout>